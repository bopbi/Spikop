<?xml version="1.0" encoding="utf-8"?>
<com.arjunalabs.android.spikop.addspik.SpikaddView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_2"
    android:id="@+id/spikadd_view">

    <EditText
        android:id="@+id/edit_spik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/gap_4"
        android:maxLength="140"/>
    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>
</com.arjunalabs.android.spikop.addspik.SpikaddView>